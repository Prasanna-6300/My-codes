library = []

def add_book():
    book = input("Enter Book Name: ")
    library.append(book)
    print("Book Added Successfully!")

def view_books():
    if not library:
        print("No books available.")
    else:
        print("Books in Library:")
        for book in library:
            print(book)

def remove_book():
    book = input("Enter Book Name to Remove: ")
    if book in library:
        library.remove(book)
        print("Book Removed.")
    else:
        print("Book not found.")

while True:
    print("\n1. Add Book")
    print("2. View Books")
    print("3. Remove Book")
    print("4. Exit")

    option = input("Enter choice: ")

    if option == "1":
        add_book()
    elif option == "2":
        view_books()
    elif option == "3":
        remove_book()
    elif option == "4":
        break
    else:
        print("Invalid Choice")
